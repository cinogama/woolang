import rscene.std;
import rscene.vm;

import test_tool;

namespace test_vm
{
    func load_and_create_vmm(var src:string)
    {
        var vmm = std::vm::create();
        vmm->load_source(src);
        return vmm;
    }

    func main()
    {
       var vmm = load_and_create_vmm(
            @"
            import rscene.std;
            func main()
            {
                std::println("Hey! This inform come from another vm!~");
            }
            main();
            "@
        );

        test_equal(vmm->has_error(), false);

        vmm->run();
        vmm->close();

        // Test memmory leak
        var i = 0;
        while (i<100000)
        {
            var vmm = load_and_create_vmm(
                @"
                import rscene.std;
                func main()
                {
                    var a = [1,2,3,4,5];
                    var b = a+a;
                    b += a+b;
                }
                main();
                "@
            );
            test_equal(vmm->has_error(), false);
            vmm->run();
            vmm->close();
        }
    }
}

test_function("test_vm.main", test_vm::main);