import woo::std;
import test_tool;

namespace test_while
{
    func fib(n:int)
    {
        if (n <= 2)
            return 1;
        return fib(n-1) + fib(n-2);
    }

    func main()
    {
        let mut i = 0;
        let mut n = 0;
        while (i < 100_0000)
        {
            n += 1;
            i += 1;
        }

        test_equal(n, 100_0000);

        let tm_beg = std::time();

        for(i=0;i<=40;i+=1)
            std::println("fib(", i, ")=", fib(i));

        let tm_end = std::time();
        std::println("fib40 cost:", tm_end-tm_beg);

        let t = [("Hello", "world")];
        for (let (a, b) : t)
        {
            test_assure(a+b == "Helloworld");
        }
    }
}

test_function("test_while.main", test_while::main);