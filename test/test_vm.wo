import woo.std;
import pkg.vm;

import test_tool;

namespace test_vm
{
    func load_and_create_vmm(src:string)
    {
        let vmm = vm::create("test_vm/test_tmp_script.wo", src)->unwarp;
        return vmm;
    }

    func main()
    {
       let vmm = load_and_create_vmm(
            @"
            import woo.std;
            func main()
            {
                std::println("Hey! This inform come from another vm!~");
            }
            main();
            "@
        );

        do vmm->run();
        do vmm->close();

        // Test memmory leak
        let mut i = 0;
        while (i < 1000)
        {
            i += 1;
            let vmm = load_and_create_vmm(
                @"
                import woo.std;
                func test_template< T >(n:T)
                {
                    return n;
                }
                func main()
                {
                    let a = [1,2,3,4,5];
                    
                    do test_template(233);
                    do test_template("My world!");
                }
                main();
                "@
            );

            do vmm->run();
            do vmm->close();
        }
    }
}

test_function("test_vm.main", test_vm::main);