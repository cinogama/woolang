import woo.std;
import test_tool;

namespace test_bool
{
    func foo_true(val: bool)
    {
        test_assure(val== true);
    }
    func foo_false(val: bool)
    {
        test_assure(val == false);
    }
    func main()
    {
        let a = 5:bool;
        test_assure(a == true);
        test_assure(a != false);

        test_assure(!(12: bool) == false);
        test_assure(!a == false);
        test_assure(!(256: bool) == false);

        a = "": bool;
        test_assure(a == true);
        test_assure(a != false);

        a = nil: bool;
        test_assure(a == false);
        test_assure(a != true);

        foo_true({}: bool);
        foo_false(nil: bool);
    }
}

test_function("test_bool.main", test_bool::main);